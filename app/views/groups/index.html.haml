- content_for(:section_header) do
  .section_header{:class => 'groups'}
    %h1= semantic_pluralize(@groups.respond_to?(:total_entries) ? @groups.total_entries : @groups.size, "#{@tag} group".strip.titleize)
    = link_to "+ Add a Group", new_group_path, :class => 'new'
    #view_options
      %span.sorting
        %strong Sort by:
        = sort_link(:name) + ","
        = sort_link(:created_at, :label => "Date added", :default_order => :desc) + ","
        = sort_link(:random, :is_default => :asc)

= render :partial => 'groups/list', :object => @groups

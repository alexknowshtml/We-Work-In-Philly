- context ||= :general
%li
  - if list_item.photo.file?
    = link_to image_tag(list_item.photo.url(:thumb)), person_path(list_item), :class => 'avatar'
  %h3
    =link_to list_item.name, person_path(list_item)
  - if list_item.twitter.present?
    %span{:class => 'twitter_link'}
      %a{:href => "https://twitter.com/#{list_item.twitter}"}= "@#{list_item.twitter}"
      on Twitter
  %p{:class=>'bio'}= list_item.bio
  - if context == :claim
    .actions
      = link_to "That's me!", claim_person_path(list_item), :class => 'claim'

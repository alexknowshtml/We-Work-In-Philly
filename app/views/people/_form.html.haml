= semantic_form_for(@person, :html => {:multipart => true}) do |f|
  = f.inputs do
    = f.input :name
    -# = f.input :email, :label => "Email address", :hint => "We'll keep this secret"
    -# = f.input :twitter
    = f.input :location, :hint => 'Neighborhood-level info preferred'
    = f.input :url, :label => "Website"
    = f.input :bio
    = f.inputs :name => "Photo" do
      - if photo_url = @person.photo_import_url || @person.photo.url(:medium)
        %li
          = image_tag photo_url, :size => '220x220'

      = f.input :photo_import_url, :label => "Import a photo from the webâ€¦"
      = f.input :photo, :label => "â€¦or upload one from your computer.", :hint => "Preferably 220px wide or larger"
    -# = f.input :user_id
  = f.buttons

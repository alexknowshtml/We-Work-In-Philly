.section_header{:class => 'companies'}
  %h1 Companies
  = link_to "+ Add a Company", new_company_path, :class => 'new'

%ul{:class => 'company_grid'}
  - @companies.each do |company|
    %li
      %a{:href => company_path(company)}
        %strong.name= company.name
        /%span.twitter= "@#{company.twitter}"
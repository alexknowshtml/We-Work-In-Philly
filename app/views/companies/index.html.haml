- content_for(:section_header) do
  .section_header{:class => 'companies'}
    %h1= semantic_pluralize(@companies.respond_to?(:total_entries) ? @companies.total_entries : @companies.size, "#{@tag} company".strip.titleize)
    = link_to "+ Add a Company", new_company_path, :class => 'new'
    #view_options
      %span.sorting
        %strong Sort by:
        = sort_link(:name) + ","
        = sort_link(:created_at, :label => "Date added", :default_order => :desc, :is_default => :desc) + ","
        = sort_link(:random)

= render :partial => 'companies/list', :object => @companies
